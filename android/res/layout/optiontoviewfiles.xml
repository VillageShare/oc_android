<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 <TextView android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/WelcomeText"
       android:text="@string/welcome_text"
       />
 <Button 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:id="@+id/displayFiles"
     android:layout_below="@id/WelcomeText"
     android:layout_centerInParent="true"
     android:gravity="center"
     android:text="Files shared with me"/>
 <Button 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:id="@+id/displaymyfiles"
     android:layout_centerInParent="true"
     android:gravity="center"
     android:layout_below="@id/displayFiles"
     android:text="Files uploaded by me"/>     
 <Button 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@id/displaymyfiles"
     android:layout_centerInParent="true"
     android:gravity="center"
     android:id="@+id/owncloudFiles"
     android:text="Continue to owncloud"/>
</RelativeLayout>